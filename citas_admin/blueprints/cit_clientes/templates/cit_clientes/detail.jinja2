{% extends 'layouts/app.jinja2' %}
{% import 'macros/detail.jinja2' as detail %}
{% import 'macros/modals.jinja2' as modals %}
{% import 'macros/topbar.jinja2' as topbar %}

{% block title %}Clientes{% endblock %}

{% block topbar_actions %}
    {% call topbar.page_buttons('Cliente ' + cliente.email) %}
        {{ topbar.button_previous('Clientes', url_for('cit_clientes.list_active')) }}
    {% endcall %}
{% endblock %}

{% block content %}
    {% call detail.card(estatus=cliente.estatus) %}
        {{ detail.label_value_big('Nombre', cliente.nombre) }}
        {{ detail.label_value('CURP', cliente.curp) }}
        {{ detail.label_value('e-mail', cliente.email) }}
        {{ detail.label_value('Teléfono', cliente.telefono) }}
        {{ detail.label_value('Creado', moment(cliente.creado).format('llll')) }}
        {{ detail.label_value('Renovación', moment(cliente.renovacion_fecha).format('ll')) }}
        {{ detail.label_value('Cuenta Vereficada', cliente.hash) }}
    {% endcall %}
{% endblock %}

{% block custom_javascript %}
    {{ detail.moment_js(moment) }}
{% endblock %}
